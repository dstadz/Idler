generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  entities Entity[] @relation("UserEntities")
}

model ResourceInventory {
  id       String   @id @default(uuid())
  wood     Int      @default(0)
  stone    Int      @default(0)
  iron     Int      @default(0)
  food     Int      @default(0)
  gold     Int      @default(0)
  power    Int      @default(0)
  energy   Int      @default(0)
  water    Int      @default(0)
  entityId String   @unique // This field needs to exist for the relation
  Entity   Entity[]
}

model Building {
  id           String  @id @default(uuid())
  entityId     String  @unique
  type         String
  xPos         Float
  yPos         Float
  level        Int
  techUnlocked Boolean
  entity       Entity  @relation("EntityBuilding", fields: [entityId], references: [id]) // Unique relation name
}

model Entity {
  id                  String            @id @default(uuid())
  resourceInventoryId String
  userId              String
  createdAt           DateTime          @default(now())
  updatedAt           DateTime
  building            Building?         @relation("EntityBuilding") // Use same unique relation name here
  resourceInventory   ResourceInventory @relation(fields: [resourceInventoryId], references: [id])
  user                User              @relation("UserEntities", fields: [userId], references: [id])
  unit                Unit?
}

model Unit {
  id       String @id @default(uuid())
  entityId String @unique
  stats    Int
  unitType String
  entity   Entity @relation(fields: [entityId], references: [id])
}
